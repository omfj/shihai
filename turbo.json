{
  "$schema": "https://turborepo.org/schema.json",
  "ui": "tui",
  "tasks": {
    "dev": {
      "persistent": true,
      "cache": false
    },
    "build": {
      "persistent": false,
      "outputs": ["dist/**"]
    },
    "db:generate": {
      "persistent": false,
      "cache": false
    },
    "db:migrate": {
      "persistent": false,
      "cache": false
    }
  }
}
