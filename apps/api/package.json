{
  "name": "@shihai/api",
  "scripts": {
    "dev": "tsx watch src/main.ts",
    "build": "esbuild src/main.ts --bundle --platform=node --outfile=dist/main.js",
    "start": "node dist/main.js",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write \"**/*.{ts,tsx,js,cjs,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,cjs,json,md}\"",
    "test:unit": "vitest",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:migrate:docker": "tsx ./scripts/migrate.ts",
    "db:studio": "drizzle-kit studio",
    "db:dbml": "tsx ./scripts/dbml.ts",
    "clean": "rm -rf .turbo dist node_modules"
  },
  "dependencies": {
    "@hono/node-server": "1.13.2",
    "date-fns": "^4.1.0",
    "dotenv": "16.4.5",
    "drizzle-orm": "0.34.1",
    "drizzle-zod": "0.5.1",
    "hono": "4.6.4",
    "nanoid": "5.0.7",
    "oslo": "1.2.1",
    "pg": "8.13.0",
    "redis": "^4.7.0",
    "zod": "3.23.8"
  },
  "devDependencies": {
    "@electric-sql/pglite": "0.2.12",
    "@types/node": "20.16.5",
    "@types/pg": "8.11.10",
    "drizzle-dbml-generator": "^0.9.0",
    "drizzle-kit": "0.25.0",
    "esbuild": "0.24.0",
    "prettier": "3.3.3",
    "tsx": "4.19.1",
    "typescript": "5.3.3",
    "vite-tsconfig-paths": "5.0.1",
    "vitest": "2.1.3"
  }
}
